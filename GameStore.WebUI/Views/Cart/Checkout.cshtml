@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model GameStore.WebUI.Models.Entities.ShippingDetails
@{
    ViewBag.Title = "GameStore оформление заказа";

}
<h2>Оформить заказ сейчас</h2>
<p>Пожалуйста введите ваши контактные данные</p>
@Html.ValidationSummary()
<form>
    
    <h3>Данные</h3>
    <div class="form-group">
        
        <label asp-for="Name">Имя</label>
        <span asp-validation-for="Name" class="text-danger"></span>
        <input asp-for="Name"  class="form-control"/>
    </div>
    <h3>Адрес доставки</h3>
   
                <div class="form-group">
                    <label asp-for="Line1"></label>
                    <span asp-validation-for="Line1" class="text-danger"></span>
                    <input asp-for="Line1" class="form-control" />
                </div>
    <div class="form-group">
        <label asp-for="Line2"></label>
        <span asp-validation-for="Line2" class="text-danger"></span>
        <input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Line3"></label>
        <span asp-validation-for="Line3" class="text-danger"></span>
        <input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="City"></label>
        <span asp-validation-for="City" class="text-danger"></span>
        <input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Country"></label>
        <span asp-validation-for="Country" class="text-danger"></span>
        <input asp-for="Country" class="form-control" />
    </div>
       
    <h3>Опции</h3>
    <div class="checkbox">
       <label>
           <input asp-for="GiftWrap" />
           Использовать подарочную упаковку
       </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="обработать"/>
    </div>
</form>