@model GameStore.WebUI.Models.Entities.Cart

<div class="navbar-right hidden-xs">
    <a asp-action="Index"
       asp-controller="Cart"
       asp-route-returnUrl="@ViewContext.HttpContext.Request.Path"
       class="btn btn-default navbar-btn">
        Заказать
    </a>
</div>
<div class="navbar-right visible-xs">
    <a asp-action="Index"
       asp-controller="Cart"
       asp-route-returnUrl="@ViewContext.HttpContext.Request.Path"
       class="btn btn-default navbar-btn">
        <span class="glyphicon glyphicon-shopping-cart"></span>
    </a>
</div>
<div class="navbar-text navbar-right">
    <b class="hidden-xs">Ваша корзина</b>
    @Model.Lines.Sum(x => x.Quantity) игр
    @Model.ComputeTotalValue().ToString("# руб")

</div>